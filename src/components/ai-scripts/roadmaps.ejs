<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Roadmap Generator</title>
    <link rel="stylesheet" href="/views/style.css" />
    <style>
        #roadmap-container {
            width: 90%;
            max-width: 1200px;
            margin-top: 2rem;
            background-color: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        #role-input {
            padding: 0.8rem;
            font-size: 1.2rem;
            width: 60%;
            max-width: 400px;
            margin-right: 1rem;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .loader {
            border: 8px solid #f3f3f3;
            border-radius: 50%;
            border-top: 8px solid #3498db;
            width: 60px;
            height: 60px;
            animation: spin 2s linear infinite;
            margin: 2rem auto;
            display: none;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <h1>Roadmap Generator</h1>
    <div id="controls">
        <input type="text" id="role-input" placeholder="E.g., Frontend Developer" />
        <button id="generate-btn">Generate Roadmap</button>
    </div>
    <div id="roadmap-container">
        <div class="loader" id="loader"></div>
        <div class="mermaid" id="mermaid-diagram">
            <!-- Mermaid diagram will be rendered here -->
        </div>
    </div>

    <script type="module">
        import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
        mermaid.initialize({ startOnLoad: false });

        const generateBtn = document.getElementById('generate-btn');
        const roleInput = document.getElementById('role-input');
        const mermaidContainer = document.getElementById('mermaid-diagram');
        const loader = document.getElementById('loader');

        generateBtn.addEventListener('click', async () => {
            const role = roleInput.value;
            if (!role.trim()) return;

            mermaidContainer.innerHTML = '';
            loader.style.display = 'block';
            generateBtn.disabled = true;

            const response = await fetch('/api/roadmap', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ role }),
            });
            const data = await response.json();
            console.log(data);
            console.log("Mermaid Code:", data.mermaidCode);

            const { svg } = await mermaid.render('roadmap-svg', data.mermaidCode);
            mermaidContainer.innerHTML = svg;
            loader.style.display = 'none';
            generateBtn.disabled = false;
        });
    </script>
</body>

</html>